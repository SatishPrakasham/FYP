<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:padding="8dp">

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/ivProfilePicture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        android:contentDescription="Profile picture"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- User Name -->
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:contentDescription="Username"
            android:text="Username" />

        <!-- Post Content -->
        <TextView
            android:id="@+id/tvPostContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:contentDescription="Post content"
            android:text="Post Content Here" />

        <!-- Likes -->
        <TextView
            android:id="@+id/tvLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Likes: 0"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:contentDescription="Number of likes" />
    </LinearLayout>

    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!-- Like Button -->
        <Button
            android:id="@+id/btnLike"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:backgroundTint="#3F51B5"
            android:contentDescription="Like button"
            android:text="Like"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <!-- Report Button -->
        <Button
            android:id="@+id/btnReport"
            android:layout_width="111dp"
            android:layout_height="37dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="#F44336"
            android:contentDescription="Report button"
            android:text="Report"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
